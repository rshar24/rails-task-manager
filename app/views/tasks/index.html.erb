<div class="container">
  <div class="list">
    <h1>My Tasks</h1>
    <ul>
      <% @tasks.each do |task| %>
      <li>  <% if task.completed == true %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
    <%= link_to task.title, task_path(task.id), class: "link item" %><%= link_to task_path(task.id), method: :delete, class: "link",  data: { confirm: "Are you sure?" } do %> Â· <i class="fas fa-trash-alt"> </i><% end %>
      </li>
      <% end %>
    </ul>
  </div>

  <p class="add">
    <%= link_to new_path, class: "link", id: "plus" do %> <i class="fas fa-plus"></i>
    <% end %>
    <%= link_to "Add a new task", new_path, class: "link" %>
  </p>
</div>



